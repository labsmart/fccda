<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plano_de_fundo"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <ImageButton
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:id="@+id/IB_pontosCulturais"
                        android:onClick="MenuPC"
                        android:background="@drawable/icone_pontos"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:clickable="true"
                        android:layout_gravity="center_horizontal|left" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/inf_menu_pontos_cult"
                        android:id="@+id/inf_menu_promoções"
                        android:gravity="center"
                        android:layout_marginTop="-20dp"
                        android:layout_marginRight="0dp"
                        android:layout_below="@+id/inf_menu_pontos_culturais"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/texto_cor"
                        android:layout_weight="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="-8dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:id="@+id/IBPromocoes"
                        android:onClick="MenuPromocoes"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/icone_promocoes"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/scrollView"
                        android:layout_toEndOf="@+id/scrollView"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/inf_menu_promocoes"
                        android:id="@+id/inf_menu_pontos_culturais"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="-20dp"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/texto_cor"
                        android:layout_weight="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:id="@+id/IBSobre"
                        android:onClick="MenuSobre"
                        android:background="@drawable/icone_sobre"
                        android:layout_marginTop="25dp"

                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/inf_menu_sobre"
                        android:id="@+id/inf_menu_sobre"
                        android:layout_marginTop="-20dp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginRight="0dp"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="@color/texto_cor"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>