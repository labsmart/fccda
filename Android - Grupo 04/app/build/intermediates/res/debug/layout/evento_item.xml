<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:layout_marginRight="5dp"
            android:gravity="right"

            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:id="@+id/layout_cabeca">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:typeface="serif"
                    android:id="@+id/textView3"

                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="36sp"


                    android:background="#ffffff"
                    android:layout_gravity="center"
                    android:textIsSelectable="false"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imagem_classificacao"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:id="@+id/textView2"
                android:layout_marginRight="5dp"
                android:textIsSelectable="false" />
        </LinearLayout>

        <!--    android:shadowColor="#1E90FF" -->
     <!--     android:shadowDx="3"
          android:shadowDy="3"
          android:shadowRadius="1.8"-->


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Local: "
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:id="@+id/tv_label1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:typeface="sans"
                    android:id="@+id/textView5"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="31dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Horario: "
                    android:id="@+id/tv_label2"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:typeface="sans"
                    android:textColor="#000000"
                    android:id="@+id/textView4"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.82"
                    android:layout_marginLeft="5dp"

                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Valor: "
                    android:id="@+id/tv_label"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textColor="#000000"
                    android:textStyle="italic"
                    android:typeface="sans"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:gravity="right"



                        android:id="@+id/img_class_item"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/luiz/AndroidStudioProjects/TabsFragments2/app/src/main/res/layout/evento_item.xml -->