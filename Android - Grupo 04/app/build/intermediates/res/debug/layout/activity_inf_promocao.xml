<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/plano_de_fundo"
    tools:context="br.com.luiz.AgendaFCCDA_01.inf_promocao">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:typeface="serif"
                android:textColor="@color/titulo_cor"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/titulo_promocao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/texto_cor"
                android:layout_marginTop="30dp"
                android:typeface="monospace"
                android:text="Small Text"
                android:layout_gravity="center|left"
                android:id="@+id/detalhe_promocao_tv" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginTop="20dp"
                android:ems="18"
                android:id="@+id/edt_email" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar"
                    android:id="@+id/cadastro" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpar"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/limpa_texto"
                    android:onClick="limpa_texto" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
